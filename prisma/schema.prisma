datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum Role {
  USER        // 一般ユーザー
  INSTRUCTOR  // 講師
}

enum PurchaseStatus {
  PENDING
  COMPLETED
  FAILED
}

model User {
  id        String    @id @db.Text
  email     String    @unique
  name      String
  role      Role      @default(USER)
  courses   Course[]
  purchases Purchase[]
  createdAt DateTime  @default(now())
}

model Course {
  id            String     @id @default(uuid()) @db.Text  // ←ここ修正
  title         String
  description   String
  price         Int
  thumbnailUrl  String?
  videoUrl      String?
  instructor    User        @relation(fields: [instructorId], references: [id])
  instructorId  String      @db.Text   // ←ここも
  purchases     Purchase[]
  createdAt     DateTime    @default(now())
}

model Purchase {
  id               String          @id @default(uuid()) @db.Text  // ←ここも
  user             User            @relation(fields: [userId], references: [id])
  userId           String          @db.Text
  course           Course          @relation(fields: [courseId], references: [id])
  courseId         String          @db.Text  // ←ここも
  stripeSessionId  String?
  status           PurchaseStatus  @default(PENDING)
  createdAt        DateTime         @default(now())
}


